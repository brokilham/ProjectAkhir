<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/peringatan_dini_input_angka">

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_above="@+id/Ya">

    <TextView
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Apakah anda yakin keluar dari aplikasi?"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ya"
        android:id="@+id/Ya"
        android:layout_alignTop="@+id/Tidak"
        android:layout_toRightOf="@+id/Tidak"
        android:layout_toEndOf="@+id/Tidak"
        android:background="@drawable/peringatan_dini_button_border_selanjutnya"
        android:textColor="#ffff"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tidak"
        android:id="@+id/Tidak"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/peringatan_dini_button_border_kembali"
        android:textColor="#ffff"/>


</RelativeLayout>
