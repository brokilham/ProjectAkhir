<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.agung.ilham.monsilva.peringatan_dini_gunung"
    android:background="#efefef">

    <com.lsjwzh.widget.materialloadingprogressbar.CircleProgressBar
        android:id="@+id/progressBar"
        app:mlpb_progress_stoke_width="3dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:drawSelectorOnTop="false"
        android:listSelector="@drawable/listviewaction"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kembali"
            android:id="@+id/buttonKembali"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom"
            android:layout_margin="0dp"
            android:background="@drawable/button_boarder"
            android:textColor="#ffff"
            android:textStyle="bold"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proses"
            android:id="@+id/buttonProses"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/buttonKembali"
            android:layout_toEndOf="@+id/buttonKembali"
            android:layout_gravity="bottom"
            android:layout_margin="0dp"
            android:background="@drawable/button_boarder"
            android:textColor="#ffff"
            android:textStyle="bold"/>

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/CobaLagi"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:layout_above="@+id/relativeLayout" />
</RelativeLayout>
