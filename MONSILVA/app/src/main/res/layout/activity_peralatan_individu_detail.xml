<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.agung.ilham.monsilva.peralatan_tim_detail"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#efefef">

    <com.lsjwzh.widget.materialloadingprogressbar.CircleProgressBar
        android:id="@+id/progressBar"
        app:mlpb_progress_stoke_width="3dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/gambarperalatan"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:paddingTop="3dp"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/judulperalatanindividu"
                android:padding="16dp"
                android:layout_below="@+id/gambarperalatan"
                android:background="#c8b60d"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/Listkategori"
                android:text="Kategori"
                android:textStyle="bold"
                android:layout_below="@+id/judulperalatanindividu"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/kategoriperalatan"
                android:layout_below="@+id/Listkategori"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Fungsi"
                android:textStyle="bold"
                android:id="@+id/Listfungsiperalatan"
                android:layout_below="@+id/kategoriperalatan"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"/>
            <com.bluejamesbond.text.DocumentView
                android:layout_below="@+id/Listfungsiperalatan"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/fungsiperalatan"
                android:textColor="#000000"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/Listtipsperalatan"
                android:text="Tips"
                android:textStyle="bold"
                android:layout_below="@+id/fungsiperalatan"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"/>
            <com.bluejamesbond.text.DocumentView
                android:layout_below="@+id/Listtipsperalatan"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/documentView"
                android:textColor="#000000"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>



        </RelativeLayout>

    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/CobaLagi"
        android:background="@android:color/transparent"/>

</RelativeLayout>
